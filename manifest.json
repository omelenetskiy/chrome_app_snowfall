{
  "manifest_version": 3,
  "name": "Snowfall Vibe",
  "version": "1.1",
  "description": "Adds falling snowflakes and music to your browser",
  "permissions": [
    "storage",
    "offscreen"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "music/track1.mp3",
        "music/track2.mp3",
        "music/track3.mp3",
        "music/track4.mp3"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
